extends index

block content
  div.content.main

    div.content-left
      if user
        div.ui.link.cards
          div.card
            div.image
              -if (user.avatar.substr(0, 5) === 'https')
                    img(src='#{user.avatar}')
                  - else
                    img(src='/img/#{user.avatar}')
            div.content
              div.header #{user.name}
              div.meta #{user.bio}
              div.description #{user.description}
            if user.user_url
              div.extra.content
                div.ui.buttons
                  a.ui.basic.green.button(href='#{user.user_url}') Floow

    div.content-left
      p.header.post-header createNode
      - for(var i in posts){
      - var post = posts[i]
      include components/post-comment
      -}

    div.content-left
      p.header.post-header creatQuestion
      - for(var i in problems){
      - var problem = problems[i]
      include components/problem-comment
      -}
    
    div.content-left
      p.header.post-header myAnswer
      include components/myAnswer

    div.content-left
      p.header.post-header collection
      include components/collections
      
